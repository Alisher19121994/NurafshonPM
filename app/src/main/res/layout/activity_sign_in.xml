<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignInActivity"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logotwo"/>
            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Sign In Now"
                android:textColor="#2A4079"
                android:textSize="23sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded1"
                    android:drawableStart="@drawable/baseline_person_24"
                    android:hint="Email"
                    android:paddingStart="10dp"
                    android:textColorHint="#A6A4A4"
                    android:textColor="#787878"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded1"
                    android:drawableStart="@drawable/outline_lock_24"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingStart="10dp"
                    android:textColorHint="#A6A4A4"
                    tools:ignore="RtlSymmetry"
                    android:textColor="#787878"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signInButton_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/roundedbutton"
                    android:text="Sign in"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="#A6A4A4"
                        android:textSize="16dp"
                        android:text="Don't you have an account?"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:text="Sign Up from here"
                        android:textColor="#2A4079"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/SignUpFromHere"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progress_sign_in"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:indeterminate="true"
                android:indeterminateTint="#2685CD"
                android:layout_gravity="center"
                android:visibility="gone"
                />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>