<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/angle"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Activities.activities.activity.profile.TimeManagementActivity">


    <EditText
        android:id="@+id/yourPlan_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="@drawable/box_for_green"
        android:hint="Title"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="#cbcbcb"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="start"
        android:background="@drawable/box_for_green"
        android:padding="10dp">

        <EditText
            android:id="@+id/planDescription_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:background="@drawable/box_for_green"
            android:hint="Description..."
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:textColorHint="#cbcbcb"
            tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitButton_id"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#03A9F4"
        android:text="Create plan"
        tools:ignore="TextContrastCheck" />
</LinearLayout>